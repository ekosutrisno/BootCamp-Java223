package Pertemuan1;

public class Latihan7 {

	public static void main(String[] args) {

		// Cara satu
		System.out.println("Membuat Array dan menambahkan isinya");
		int[] angka = new int[5];
		int x = 9;
		for (int i = 0; i < 5; i++) {
			angka[i] = x++;
		}
		System.out.println(angka[3]);
		System.out.println();

		// Cara dua
		System.out.println("Menampilkan Array");
		int[] angka2 = { 1, 3, 5, 7, 9, 11, 13 };
		for (int i = 0; i < 7; i++) {
			System.out.println(angka2[i]);
		}

		// Cara tiga
		System.out.println("\nMenjumlahkan Array");
		int a[] = { 5, 8, 9, 3 };
		int b[] = { 2, 1, 9, 7 };
		int c[] = new int[4];

		for (int i = 0; i < 4; i++) {
			c[i] = a[i] + b[i];
			System.out.println(c[i]);
		}

		System.out.println("\nMengecek Array Array");
		for (int i = 0; i < 4; i++) {
			if (a[i] > b[i]) {
				c[i] = a[i] + b[i];
				c[i] *= 2;
			} else {
				c[i] = a[i] + b[i];
			}
			System.out.println(c[i]);
		}
		
		System.out.println("\nMenjumlahkan Array");
		
		String warna[] = { "red","orange","green"};
		String buah[]= {"Apple","Orange","Water Melon"};
		String harga[]= {"1000","1500","2500"};
		
	}

}
