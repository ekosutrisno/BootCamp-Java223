		int maks_jarak = 5;
		min_beli = 30000;
		harga = 35000;
		promo = 0.5;
		pajak = 0.1;

		// Memanggil Scanner
		inputUser = new Scanner(System.in);
		double bayar = inputUser.nextDouble();

		if (bayar >= min_beli) {
			double diskon = harga * promo;
			
		}

	}

}
