package LatihanSoal;

public class Soal4 {

	public static void main(String[] args) {
		// Kaos Kaki
		kaosKaki("12121122");
	}

	public static void kaosKaki(String a_str) {
		int[] input = a_str.split(",");
		int pjg = a_str.length();
		int temp = 0;
		for (int i = 0; i < pjg; i++) {
			if (a_str.charAt(i) == a_str.charAt(i + 1)) {
				temp++;
				System.out.print(temp);
			}
		}
	}

}
